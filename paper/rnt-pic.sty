\RequirePackage{ifpdf}

\ifpdf
  \RequirePackage[pdftex]{graphicx}
  \DeclareGraphicsRule{*}{eps}{*}{}
\else
  \RequirePackage[xdvi]{graphicx}
\fi

%---------------
\def\obrazok#1#2#3{%
\begin{figure}[!htb]
\ifpdf
  \centerline{\includegraphics{#1.pdf}}
\else
  \centerline{\includegraphics{#1.eps}}
\fi
\par
\caption{#2}
\label{fig:#3}
\end{figure}
} 
%

%---------------
\def\scaledobrazok#1#2#3#4{%
\begin{figure}[!htb]
\ifpdf
  \centerline{\includegraphics[scale=#4]{#1.pdf}}
\else
  \centerline{\includegraphics[scale=#4]{#1.eps}}
\fi
\par
\caption{#2}
\label{fig:#3}
\end{figure}
} 
